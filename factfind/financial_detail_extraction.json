{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Simple Asset Base Model",
  "description": "Basic asset structure for home loan applications",
  "type": "object",
  "properties": {
    "applicantId": {
      "type": "string",
      "description": "Unique identifier for the loan applicant"
    },
    "assessmentDate": {
      "type": "string",
      "format": "date"
    },
    "assets": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/asset"
      }
    },
    "totalValue": {
      "type": "number",
      "minimum": 0
    }
  },
  "required": ["applicantId", "assessmentDate", "assets"],
  "definitions": {
    "asset": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique asset identifier"
        },
        "category": {
          "type": "string",
          "enum": [
            "Real Estate",
            "Deposit Account",
            "Managed Fund", 
            "Personal Equity In Any Private Business",
            "Shares",
            "Superannuation",
            "Boat",
            "Motorcycle",
            "Motor Vehicle",
            "Truck",
            "Marine",
            "Caravan/Horse Float",
            "Plant and Equipment",
            "Stock Machinery",
            "Tools of Trade",
            "Charge Over Cash",
            "Collections",
            "Debenture Charge",
            "Goodwill",
            "Guarantee",
            "Receivables",
            "Home Contents",
            "Life Insurance",
            "Other"
          ]
        },
        "description": {
          "type": "string",
          "description": "Description of the asset"
        },
        "value": {
          "type": "number",
          "minimum": 0,
          "description": "Current value of the asset"
        },
        "notes": {
          "type": "string",
          "description": "Additional notes"
        }
      },
      "required": ["id", "category", "description", "value"]
    }
  }
}